<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Dead Man's Switch -->
	<Operation Class="PatchOperationConditional" MayRequire="aoba.deadmanswitch.core">
		<xpath>Defs/ThingDef[@Name="BaseAutomatroidRace"]/race[soundMeleeHitBuilding="Pawn_Melee_Punch_HitBuilding"]</xpath>
		<match Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[@Name="BaseAutomatroidRace"]/race/soundMeleeHitBuilding</xpath>
			<value>
				<soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding_Metal</soundMeleeHitBuilding>
			</value>
		</match>
	</Operation>
	<Operation Class="PatchOperationConditional" MayRequire="aoba.deadmanswitch.core">
		<xpath>Defs/ThingDef[@Name="BaseDMSMachine"]/race[soundMeleeHitBuilding="Pawn_Melee_Punch_HitBuilding"]</xpath>
		<match Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[@Name="BaseDMSMachine"]/race/soundMeleeHitBuilding</xpath>
			<value>
				<soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding_Metal</soundMeleeHitBuilding>
			</value>
		</match>
	</Operation>
</Patch>
