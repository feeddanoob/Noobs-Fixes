<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/RecipeDef/ingredients/li/filter/thingDefs[li = "DankPyon_ChunkClay"]</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>
				<RecipeDef ParentName="MakeStoneBlocksBase">
					<defName>Make_StoneBlocksClay</defName>
					<label>make clay blocks</label>
					<description>Cuts clay chunks into usable blocks.</description>
					<ingredients>
						<li>
							<filter>
								<thingDefs>
									<li>DankPyon_ChunkClay</li>
								</thingDefs>
							</filter>
							<count>1</count>
						</li>
					</ingredients>
					<fixedIngredientFilter>
						<thingDefs>
							<li>DankPyon_ChunkClay</li>
						</thingDefs>
					</fixedIngredientFilter>
					<products>
						<DankPyon_BlocksClay>20</DankPyon_BlocksClay>
					</products>
				</RecipeDef>
			</value>
		</nomatch>
	</Operation>
</Patch>
